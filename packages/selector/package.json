{
  "name": "@plasmohq/selector",
  "version": "0.0.4",
  "description": "Powerful Selector API with Dedicated Monitoring Supports",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./hook": {
      "import": "./dist/hook.js",
      "require": "./dist/hook.cjs",
      "types": "./dist/hook.d.ts"
    },
    "./monitor": {
      "import": "./dist/monitor.js",
      "require": "./dist/monitor.cjs",
      "types": "./dist/monitor.d.ts"
    },
    "./background": {
      "import": "./dist/background.js",
      "require": "./dist/background.cjs",
      "types": "./dist/background.d.ts"
    },
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "hook": [
        "./dist/hook.d.ts"
      ],
      "monitor": [
        "./dist/monitor.d.ts"
      ],
      "background": [
        "./dist/background.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:compile": "tsup --watch",
    "dev:test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "build": "tsup",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "prepublishOnly": "pnpm build"
  },
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "contributors": [
    "@louisgv",
    "@ColdSauce"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/PlasmoHQ/plasmo.git"
  },
  "license": "MIT",
  "keywords": [
    "react-hook",
    "browser-extension",
    "chrome-extension"
  ],
  "peerDependencies": {
    "react": "^16.8.6 || ^17 || ^18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@jest/types": "29.5.0",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.233",
    "@types/node": "18.15.12",
    "@types/react": "18.0.37",
    "cross-env": "7.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.0",
    "ts-jest": "29.1.0",
    "tsup": "6.7.0",
    "typescript": "5.0.4"
  }
}
